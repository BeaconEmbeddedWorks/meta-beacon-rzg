From: Charles Stevens <charles.stevens@logicpd.com>
Date: Mon, 15 Jun 2020 18:30:50 -0500
Subject: [PATCH 29/30] dts: beacon: Use correct GPIOs for backligh
 enable/power (DPI)

---
 arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi | 4 ++--
 1 file changed, 2 insertions(+), 2 deletions(-)

diff --git a/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi b/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi
index da5c77e2ec81..82864ed7e655 100644
--- a/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi
+++ b/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi
@@ -32,7 +32,7 @@
 	backlight: backlight {
 		compatible = "pwm-backlight";
 		power-supply = <&reg_lcd>;
-		enable-gpios = <&gpio_exp1 3 GPIO_ACTIVE_HIGH>;
+		enable-gpios = <&gpio_exp3 7 GPIO_ACTIVE_LOW>;
 		pwms = <&pwm0 0 50000>;
 		brightness-levels = <0 4 8 16 32 64 128 255>;
 		default-brightness-level = <6>;
@@ -155,7 +155,7 @@
 		compatible = "rocktech,rk070er9427";
 		/*backlight is shared between lvds and parallel displays */
 		backlight = <&backlight>;
-		enable-gpios = <&gpio_exp3 7 GPIO_ACTIVE_LOW>;
+		enable-gpios = <&gpio1 21 GPIO_ACTIVE_HIGH>;
 		port {
 			rgb_panel: endpoint {
 				remote-endpoint = <&du_out_rgb>;
