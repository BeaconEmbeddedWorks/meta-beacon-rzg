From 83c46a5c5f4359b54e11e64f6e228315ce08d4d8 Mon Sep 17 00:00:00 2001
From: Charles Stevens <charles.stevens@logicpd.com>
Date: Thu, 7 May 2020 10:08:50 -0500
Subject: [PATCH 23/26] dts: configure scif5 for use of SOM GNSS

---
 arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi | 8 ++++++++
 arch/arm64/boot/dts/renesas/beacon-renesom-som.dtsi       | 5 +++++
 2 files changed, 13 insertions(+)

diff --git a/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi b/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi
index 482d7e6d1b16..807001f9758a 100644
--- a/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi
+++ b/arch/arm64/boot/dts/renesas/beacon-renesom-baseboard.dtsi
@@ -16,6 +16,7 @@
 		serial2 = &hscif1;
 		serial3 = &scif0;
 		serial4 = &hscif2;
+		serial5 = &scif5;
 		spi0 = &msiof0;
 		spi1 = &msiof1;
 		spi2 = &msiof2;
@@ -736,6 +737,13 @@
 	status = "okay";
 };
 
+&scif5 {
+	pinctrl-0 = <&scif5_pins>;
+	pinctrl-names = "default";
+
+	status = "okay";
+};
+
 &scif_clk {
 	clock-frequency = <14745600>;
 };
diff --git a/arch/arm64/boot/dts/renesas/beacon-renesom-som.dtsi b/arch/arm64/boot/dts/renesas/beacon-renesom-som.dtsi
index 029b7149bb20..44f9860f8563 100644
--- a/arch/arm64/boot/dts/renesas/beacon-renesom-som.dtsi
+++ b/arch/arm64/boot/dts/renesas/beacon-renesom-som.dtsi
@@ -182,6 +182,11 @@
 		function = "scif0";
 	};
 
+	scif5_pins: scif5 {
+		groups = "scif5_data_a";
+		function = "scif5";
+	};
+
 	scif_clk_pins: scif_clk {
 		groups = "scif_clk_a";
 		function = "scif_clk";
