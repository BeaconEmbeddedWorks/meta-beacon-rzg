 	mmio_write_32(GPIO_INOUTSEL5, 0x00000208U);
 	mmio_write_32(GPIO_INOUTSEL6, 0x00013F00U);
+#endif
 	mmio_write_32(GPIO_INOUTSEL7, 0x00000003U);
 
 }
